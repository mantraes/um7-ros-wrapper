<launch>
  
  <node name="um7_wrapper_node" pkg="um7" type="um7_driver" output="screen">
 
    <param name="port"            value="/dev/ttyUSB0" />
    <param name="baud"            value="115200" />
    <param name="frame_id"        value="imu_link" />
    <param name="mag_updates"     value="true" />
    <param name="quat_mode"       value="true" />
    <param name="zero_gyros"      value="true" />

    <param name="orientation_covariance"      	      value="0.01" />
    <param name="angular_velocity_covariance"         value="0.000025" />
    <param name="linear_acceleration_covariance"      value="0.0036" />

    <param name="gyro_x_trim"      value="0.06"/>
    <param name="gyro_x_trim"      value="-0.1"/>
    <param name="gyro_x_trim"      value="-1.8"/>
  </node>

</launch>
